#navbar
  background #FFFFFF
#navbar,
#navbar-location-area
  position absolute
  top 0
  left 0
  width 100%
  height 30px
#navbar-location-box
  width 60%
  margin-top 5px
  margin-left auto
  margin-right auto
  text-align center
#navbar-location
  color #282828
  font-size 16px
#navbar-logo-area
  float left
  width 36px
  height 30px
  padding 5px 7px 5px 8px
  border-right 1px solid #F2F2F2
#navbar-logo
  width 22px
  height 22px
.navbar-icon
  float right
  width 30px
  height 30px
  padding 5px 1px 3px 6px
  color #BCBCBC
  font-size 16px
#navbar-user
  border-left 1px solid #F2F2F2
.navbar-icon:hover
  color #282828
